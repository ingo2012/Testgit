    private void showPromTable(EpromTable table,EpromUtils eu) {
        
        try {
            
            //su.readFile();
           
            String s[] = new String[8];
            int i =0;
            int n =-1;
            byte ioBuf;
            byte[] inbyte = new byte[8];

            for(i=0;i<eu.prom.length;i++){
              n++;
              ioBuf =  eu.prom[i];
              s[n] = eu.getHexStringByte(ioBuf);

              if(eu.prom[i]<33) {
                  inbyte[n] = 46; // Chars < 33 are set to "."
              } else { inbyte[n] = eu.prom[i]; }
              
              if ((n % 7==0) && (n>0)) {
                  // System.out.println("if n="+n+" s="+s.toString());
                  String content = new String(inbyte,"ISO-8859-1");
                  table.addRow(i,s,content);
                  n=-1;
              }

            }
        } catch (UnsupportedEncodingException ex) {
            Logger.getLogger(Eprog.class.getName()).log(Level.SEVERE, null, ex);
        }
    }


